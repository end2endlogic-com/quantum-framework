{"type":"policy","refName":"systemUserPolicy","displayName":"System User Policy","description":"System user can take any action in any area, domain, and action","principalId":"system@system.com","principalType":"USER",
 "rules":[
   {"name":"SysAnyActionAllAreas",
    "description":"System user can take any action in any area, functional domain, and action",
    "securityURI":{"header":{"identity":"system@system.com","area":"*","functionalDomain":"*","action":"*"},
                   "body":{"realm":"*","orgRefName":"*","accountNumber":"*","tenantId":"*","ownerId":"*","dataSegment":"*","resourceId":"*"}},
    "effect":"ALLOW","priority":0,"finalRule":true}
 ]}
{"type":"policy","refName":"systemRolePolicy","displayName":"System Role Policy","description":"System role can take any action within security","principalId":"system","principalType":"ROLE",
 "rules":[
   {"name":"SysRoleAnyActionSecurity",
    "description":"system role can take any action with in security",
    "securityURI":{"header":{"identity":"system","area":"security","functionalDomain":"*","action":"*"},
                   "body":{"realm":"${realmId}","orgRefName":"${orgRefName}","accountNumber":"${accountNum}","tenantId":"${tenantId}","ownerId":"system@system.com","dataSegment":"*","resourceId":"*"}},
    "effect":"ALLOW","priority":1,"finalRule":true}
 ]}
{"type":"policy","refName":"userOwnResourcesPolicy","displayName":"User Own Resources Policy","description":"Users can view their own resources, limited to default dataSegment","principalId":"user","principalType":"ROLE",
 "rules":[
   {"name":"view your own resources, limit to default dataSegment",
    "securityURI":{"header":{"identity":"user","area":"*","functionalDomain":"*","action":"*"},
                   "body":{"realm":"*","orgRefName":"*","accountNumber":"*","tenantId":"*","ownerId":"*","dataSegment":"*","resourceId":"*"}},
    "andFilterString":"dataDomain.ownerId:${principalId}&&dataDomain.dataSegment:#0",
    "effect":"ALLOW","finalRule":false}
 ]}
{"type":"policy","refName":"userDenySecurityDeletePolicy","displayName":"User Deny Security Delete Policy","description":"Users can't delete anything in security area","principalId":"user","principalType":"ROLE",
 "rules":[
   {"name":"users can't delete anything in security area",
    "securityURI":{"header":{"identity":"user","area":"Security","functionalDomain":"*","action":"DELETE"},
                   "body":{"realm":"*","orgRefName":"*","accountNumber":"*","tenantId":"*","ownerId":"*","dataSegment":"*","resourceId":"*"}},
    "andFilterString":"dataDomain.ownerId:${principalId}&&dataDomain.dataSegment:#0",
    "effect":"DENY","finalRule":true}
 ]}
{"type":"policy","refName":"adminTenantPolicy","displayName":"Admin Tenant Policy","description":"Tenant admin can administer the tenant records","principalId":"admin","principalType":"ROLE",
 "rules":[
   {"name":"tenant admin can administer the tenant records",
    "securityURI":{"header":{"identity":"admin","area":"*","functionalDomain":"*","action":"*"},
                   "body":{"realm":"*","orgRefName":"*","accountNumber":"*","tenantId":"*","ownerId":"*","dataSegment":"*","resourceId":"*"}},
    "andFilterString":"dataDomain.tenantId:${pTenantId}",
    "effect":"ALLOW","finalRule":true}
 ]}
